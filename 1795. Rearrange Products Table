import pandas as pd

def rearrange_products_table(products: pd.DataFrame) -> pd.DataFrame:

    ids=[]
    store=[]
    price=[]
    products.set_index(keys='product_id', inplace=True)
    for index,row in products.iterrows():
        for val in range(1,4):
            ids.append(index)
            store.append(f'store{val}')
            price.append(row[f'store{val}'])
  
    res_df=pd.DataFrame({
        "product_id":ids,
        "store":store,
        "price":price
    })      
    return res_df.dropna()
    
